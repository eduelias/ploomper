{
    "compileOnSave": true,    
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "pretty": true,        
        "module": "commonjs",
        "target": "es6",        
        "lib": ["es6"],        
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,                
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}